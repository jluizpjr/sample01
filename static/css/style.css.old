h1 {
    border: 2px #eee solid;
    color: brown;
    text-align: center;
    padding: 10px;
}

h2 {
    border: 2px #eee solid;
    color: blue;
    text-align: center;
    padding: 10px;
}
table {
  table-layout: fixed;
  width: 60%;
  height: 100%;
  border-collapse: collapse;
  border: 3px solid gray;
}

thead th:nth-child(1) {
  width: 30%;
}

thead th:nth-child(2) {
  width: 20%;
}

thead th:nth-child(3) {
  width: 15%;
}

thead th:nth-child(4) {
  width: 35%;
}

th {
  padding: 20px;
  height: 50%;
  color: blue;
}
tr:nth-child(even) {
  background-color: #f2f2f2;
}
